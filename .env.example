# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_CHAT_MODEL_SIMPLE=gpt-3.5-turbo
OPENAI_CHAT_MODEL_COMPLEX=gpt-4

# Claude Configuration (optional - uses Claude for chat if set)
CLAUDE_API_KEY=sk-ant-your-claude-api-key
CLAUDE_MODEL_SIMPLE=claude-3-5-haiku-20241022
CLAUDE_MODEL_COMPLEX=claude-3-5-sonnet-20241022

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_CONTEXT_TOKENS=2000
CACHE_EXPIRY_HOURS=24
MAX_CONVERSATION_HISTORY=5
TOP_K_KNOWLEDGE_CHUNKS=3
MAX_USER_MEMORY_FACTS=10

# Token Thresholds
SIMPLE_QUERY_TOKEN_THRESHOLD=100
COMPLEX_QUERY_TOKEN_THRESHOLD=300

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar,fr

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_USER=30

# Performance Tuning
EMBEDDING_BATCH_SIZE=50
VECTOR_SEARCH_LISTS=100
SIMILARITY_THRESHOLD=0.7

# Morocco-specific Configuration
TIMEZONE=Africa/Casablanca
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=18
